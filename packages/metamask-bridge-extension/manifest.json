{
  "manifest_version": 3,
  "name": "WCC MetaMask Bridge",
  "version": "1.0.0",
  "description": "Bridge for WCC Admin AI Scanner to analyze MetaMask UI structure",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "chrome-extension://nkbihfbeogaeaoehlefnkodbefgpgknn/*",
        "chrome-extension://*/popup.html",
        "chrome-extension://*/home.html"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
