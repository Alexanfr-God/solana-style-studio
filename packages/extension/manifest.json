{
  "manifest_version": 3,
  "name": "WCC Overlay Bridge",
  "version": "1.0.0",
  "description": "Bridge to WCC Overlay for popup skinning",
  "permissions": ["nativeMessaging"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
